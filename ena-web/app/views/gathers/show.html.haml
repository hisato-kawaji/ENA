- model_class = Gather
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize


.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), gathers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_gather_path(@gather), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), gather_path(@gather), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
